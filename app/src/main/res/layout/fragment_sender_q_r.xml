<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sender.SenderQR">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/ivOfferSdpQr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:srcCompat="@tools:sample/avatars"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvOfferSdpJson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:selectAllOnFocus="true" />

    <Button
        android:id="@+id/btnScanAnswerSdpQr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_scan_answer" />



    <Button
        android:id="@+id/btnStartConnection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_start_connection"
        android:layout_marginBottom="8dp"/>


    <TextView
        android:id="@+id/etLogs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>





    </androidx.core.widget.NestedScrollView>